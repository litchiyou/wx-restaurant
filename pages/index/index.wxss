/**index.wxss**/

.swiper-menu, .swiper-imgs, .swiper-imgs image {
  width: 100%;
  height: 340rpx;
}

.flex-1 {
  flex: 1;
  -webkit-flex: 1;
}

.flex-2 {
  flex: 2;
  -webkit-flex: 2;
}

.nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 750rpx;
  height: 72rpx;
  background-color: #f0f3f8;
  font-size: 28rpx;
}

.search-btn {
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  box-sizing: border-box;
  border-right: #bbc6d2 1px solid;
}

.menu-info {
  display: flex;
  flex-direction: row;
  width: 550rpx;
}

.sub-cart-num {
  margin-left: 25rpx;
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 50rpx;
  width: 340rpx;
}
.plus, .add {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
}

.plus img, .add image {
  width: 44rpx;
  height: 44rpx;
  vertical-align: top;
}
.num{
  width: 92rpx;
  display: inline-block;
  text-align: center;
  vertical-align: top;
}
.hot {
  border: none;
}

.active {
  background: #de3120 !important;
  color: #fff !important;
}

.aslide-menu {
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  height: 750rpx;
  overflow: hidden;
}

.aslide-menu .aslide-box {
  height: 750rpx;
  width: 200rpx;
  background-color: #1f2638;
  text-align: center;
  color: #fff;
}

.aslide-box view {
  height: 90rpx;
  line-height: 90rpx;
}

.in {
  background: #de3120;
  border-left: 12rpx solid orange; 
}

.aslide-content{
  height: 750rpx;
  width:550rpx;
  overflow-x: hidden;
}

.aslide-item-info{
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
  margin-top: 15px;
}
.aslide-item-title{
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
}
.aslide-item-img image{
  width:200rpx;
  height: 150rpx;
}
.cart-add{
  width: 40rpx;
  height: 40rpx;
}
.cart-info-container{
  display: inline-block;
  flex-direction: column;
  width: 100%;
}
.price{
  color:#de3120;
  margin-right: 0px;
  display: inline;
}
.food-name{
  font-weight: bold;
  font-size: 28rpx;
}

